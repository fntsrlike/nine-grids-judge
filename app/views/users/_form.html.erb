<%= form_for(@user, html: { class: "ui form" }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="inline field"><%= f.label :roles %><br />
    <div class="ui checkbox">
      <%= f.label(:admin) do %>
        <%= hidden_field_tag(:admin, 0) %>
        <%= check_box_tag(:admin, 1, @user.has_role?(:admin)) %>
        Admin
      <% end %>
    </div>
    <div class="ui checkbox">
      <%= f.label(:manager) do %>
        <%= hidden_field_tag(:manager, 0) %>
        <%= check_box_tag(:manager, 1, @user.has_role?(:manager)) %>
        Manager
      <% end %>
    </div>
    <div class="ui checkbox">
      <%= f.label(:student) do %>
        <%= hidden_field_tag(:student, 0) %>
        <%= check_box_tag(:student, 1, @user.has_role?(:student)) %>
        Student
      <% end %>
    </div>
  </div>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :realname %>
    <%= f.text_field :realname%>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <%= f.button class: "ui blue button"%>
<% end %>
