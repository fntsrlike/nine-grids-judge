<h2 class="ui dividing header">User</h2>
<p id="notice"><%= notice %></p>

<table class="ui definition table">
  <tbody>
    <tr>
      <td class="two wide column">Username</td>
      <td><%= @user.username %></td>
    </tr>
    <tr>
      <td>Real Name</td>
      <td><%= @user.realname %></td>
    </tr>
    <tr>
      <td>Email</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>Phone</td>
      <td><%= @user.phone %></td>
    </tr>
    <tr>
      <td>Roles</td>
      <td><%= @user.roles(:select => :name).collect(&:name).join(', ') %></td>
    </tr>
  </tbody>
</table>

<%= link_to edit_user_path(@user) do %>
<div class="ui basic button">Edit</div>
<% end %>

<%= link_to users_path do %>
<div class="ui basic button">Back</div>
<% end %>
