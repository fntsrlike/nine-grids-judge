<%= form_for(@judgement, html: { class: "ui form" }) do |f| %>
  <% if @judgement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@judgement.errors.count, "error") %> prohibited this judgement from being saved:</h2>

      <ul>
      <% @judgement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if can? :manage, Judgement %>
    <div class="field">
      <%= f.label :answer_id %>
      <%= f.text_field :answer_id, value: @answer.id %>
    </div>
    <div class="field">
      <%= f.label :reviewers %>
      <%= f.text_field :user_id, value: current_user.id %>
    </div>
  <% else %>
    <%= f.hidden_field :answer_id, value: @answer.id %>
  <% end %>

  <div class="field">
    <label>
      <%= @answer.quiz.chapter.number %> - <%= @answer.quiz.title %>
    </label>
    <%= simple_format @answer.quiz.content %>
  </div>

  <div class="field">
    <label>
      Answer by
      <%= @answer.user.realname %>
      (<%= @answer.user.username %>)
    </label>
    <%= simple_format @answer.content %>
  </div>

  <div class="field">
    <label>
      Reference
    </label>
    <%= simple_format @answer.quiz.reference %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div class="grouped fields">
    <%= f.label :result %>
    <div class="field">
      <div class="ui radio checkbox">
        <%= f.radio_button :result, :pass %>
        <%= f.label :result, :pass, value: :pass %>
      </div>
    </div>
    <div class="field">
      <div class="ui radio checkbox">
        <%= f.radio_button :result, :reject %>
        <%= f.label :result, :reject, value: :reject %>
      </div>
    </div>
  </div>

  <%= f.button class: "ui blue button"%>
  <%= f.button "Cancel", name: "cancel", class: "ui button"%>
<% end %>
