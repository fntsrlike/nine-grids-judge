<h1>Listing judgements</h1>

<table class="ui table">
  <thead>
    <tr>
      <th>Examinee</th>
      <th>Quiz</th>
      <th>Result</th>
      <th>Reviewers</th>
      <th>Updated At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @judgements.each do |judgement| %>
      <tr>
        <td>
          <%= judgement.answer.user.realname %>
          (<%= judgement.answer.user.username %>)
        </td>
        <td>
          <%= link_to quiz_path judgement.answer.quiz do %>
            <%= judgement.answer.quiz.chapter.number %>: <%= judgement.answer.quiz.title %>
          <% end %>
        </td>
        <td><%= puts_answer_label judgement.answer%></td>
        <td><%= judgement.user.username %></td>
        <td><%= judgement.answer.updated_at.to_s(:short)  %></td>
        <td><%= link_to 'Show', judgement %></td>
      <% if can? :update, judgement %>
        <td><%= link_to 'Rejudge', edit_judgement_path(judgement) %></td>
      <% end %>
      <% if can? :destroy, judgement %>
        <td><%= link_to 'Destroy', judgement, method: :delete, data: { confirm: "It will be destroy and requeue answer.\nAre you sure?" } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :manage, Judgement %>
  <%= link_to new_judgement_path do %>
    <div class="ui blue button">New Judgement</div>
  <% end %>
<% end %>
