<h1>Listing judgements</h1>

<table>
  <thead>
    <tr>
      <th>Examinee</th>
      <th>Quiz</th>
      <th>Reviewers</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @judgements.each do |judgement| %>
      <tr>
        <td>
          <%= judgement.answer.user.username %>
        </td>
        <td>
          <%= judgement.answer.quiz.chapter.number %> -
          <%= judgement.answer.quiz.code %> :
          <%= judgement.answer.quiz.title %>
        </td>
        <td><%= judgement.user.username %></td>
        <td><%= judgement.answer.status %></td>
        <td><%= link_to 'Show', judgement %></td>
      <% if can? :update, judgement %>
        <td><%= link_to 'Rejudge', edit_judgement_path(judgement) %></td>
      <% end %>
      <% if can? :delete, judgement %>
        <td><%= link_to 'Destroy', judgement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :manage, Judgement %>
<%= link_to 'New Judgement', new_judgement_path %>
<% end %>
