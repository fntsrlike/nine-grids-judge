<h2 class="ui dividing header">Listing chapters</h2>

<table class="ui table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
    <% if can? :create, Answer and cannot? :manage, @chapter%>
      <th>Is Passed</th>
    <% end %>
    <% if can? :manage, Chapter %>
      <th>Weight</th>
      <th>Activity</th>
      <th colspan="3"></th>
    <% end %>
    </tr>
  </thead>

  <tbody>
    <% @chapters.order("weight").each do |chapter| %>
      <tr>
        <td><%= chapter.number %></td>
        <td>
        <% if chapter.active? %>
          <%= link_to chapter.title, chapter %>
        <% else %>
          <%= chapter.title %>
        <% end %>
        </td>
      <% if can? :create, Answer and cannot? :manage, @chapter%>
        <td>No (Not working)</td>
      <% end %>
      <% if can? :manage, @chapter %>
        <td><%= chapter.weight %></td>
        <td><%= chapter.status %></td>
        <td><%= link_to 'Show', chapter %></td>
        <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
        <td><%= link_to 'Destroy', chapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if can? :create, Chapter %>
  <%= link_to new_chapter_path do %>
    <div class="ui basic button">New Chapter</div>
  <% end %>
<% end %>
