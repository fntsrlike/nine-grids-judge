<h3 class="ui dividing header">Listing quizzes</h3>

<table class="ui table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.id %></td>
        <td><%= quiz.title %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_quiz_path(chapter: @chapter.number) do %>
  <div class="ui blue button">New Quiz</div>
<% end %>
