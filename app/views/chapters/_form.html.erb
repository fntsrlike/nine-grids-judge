<%= form_for(@chapter) do |f| %>
  <% if @chapter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@chapter.errors.count, "error") %> prohibited this chapter from being saved:</h2>

      <ul>
      <% @chapter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :decription %><br>
    <%= f.text_area :decription %>
  </div>
  <div class="field">
    <%= f.label :weight %><br>
    <%= f.number_field :weight %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.radio_button :status, :inactive %>
    <%= f.label :status, :inactive, value: :inactive %>
    <%= f.radio_button :status, :active %>
    <%= f.label :status, :active, value: :active %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
