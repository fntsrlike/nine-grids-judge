<h2 class="ui dividing header">Listing quizzes</h2>

<table class="ui table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Chapter</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.id %></td>
        <td>
          <% if !quiz.chapter.nil? and Quiz.exists?(id: quiz.chapter.id) %>
            <%= quiz.chapter.number %>
          <% else %>
            -
          <% end %>
        </td>
        <td><%= quiz.title %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="ui column centered grid" style="margin-top:1em;">
  <%= paginate @quizzes, window: 2, outer_window: 1 %>
</div>
