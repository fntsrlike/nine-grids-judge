<%= form_for(@quiz, html: { class: "ui form" }) do |f| %>
  <% if @quiz.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quiz.errors.count, "error") %> prohibited this quiz from being saved:</h2>

      <ul>
      <% @quiz.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.hidden_field(:chapter_id, value: @quiz.chapter.id) %>
    <%= f.label(:chapter_id) %>
    <%= @quiz.chapter.number %> - <%= @quiz.chapter.title %>
  </div>
  <div class="field">
    <%= f.label(:title) %>
    <%= f.text_field(:title) %>
  </div>
  <div class="field">
    <%= f.label(:content) %>
    <%= f.text_area(:content) %>
  </div>
  <div class="field">
    <%= f.label(:reference) %>
    <%= f.text_area(:reference) %>
  </div>
  <div class="field">
    Editor have supported
    <a href="http://markdown.tw/" target="_blank">Markdown markup</a>
    and most of
    <a href="https://help.github.com/articles/github-flavored-markdown/" target="_blank">GitHub Flavored Markdown</a>.
    Try to use it! =D
  </div>
  <div class="actions">
    <%= f.button(class: "ui blue button") %>
  </div>
<% end %>
