<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Quiz Title</th>
      <th>Status</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.user.username %></td>
        <td><%= answer.quiz.chapter.number %> - <%= answer.quiz.code %>: <%= answer.quiz.title %> </td>
        <td><%= answer.status %></td>
        <td><%= answer.created_at.to_s(:short)  %></td>
        <td><%= link_to 'Show', answer %></td>
      <% if can? :update, answer %>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
      <% end %>
      <% if can? :delete, answer %>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :manage, Answer %>
<%= link_to 'New Answer', new_answer_path %>
<% end %>
