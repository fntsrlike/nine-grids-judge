<h2 class="ui dividing header">Listing answers</h2>

<table class="ui table">
  <thead>
    <tr>
      <th>Examinee</th>
      <th>Quiz</th>
      <th>Status</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.user.username %></td>
        <td>
          <%= link_to quiz_path answer.quiz do %>
            <%= answer.quiz.chapter.number %>: <%= answer.quiz.title %>
          <% end %>
        </td>
        <td>
          <%= puts_answer_label answer%>
        </td>
        <td><%= answer.created_at.to_s(:short)  %></td>
      <% if can? :create, Judgement %>
        <td><%= link_to 'Judge', new_judgement_path(target: answer.id) %></td>
      <% else %>
        <td><%= link_to 'Show', answer %></td>
      <% end %>
      <% if can? :update, answer %>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
      <% end %>
      <% if can? :delete, answer %>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :manage, Answer %>
  <%= link_to new_answer_path do %>
    <div class="ui basic button">New Answer</div>
  <% end %>
<% end %>
